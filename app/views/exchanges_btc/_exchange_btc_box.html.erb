<div class='exchange_box col-sm-12'>
  <div class='card'>

    <div class='card-block'>
      <%= form_tag('/convert_btc', method: :get, id: 'exchange_form') do %>
        <div class='local_currency'>
          <div class='form-group'>
            <p class='title'>Moeda Local</p>
            <%= select_tag 'source_currency', options_for_select(source_currency_list, 'BTC'), class: 'form-control', id: 'source_currency' %>
          </div>

          <div class='form-group'>
            <input type='number' name='amount' id='amount' class='form-control' placeholder='Quantidade' step='any' required>
          </div>
        </div>

        <div class='form-group text-center'>
          <%= image_tag '/reverse.svg', class: 'btn img-fluid reverse-btc-btn'%>
        </div>
                    
        <div class='destination_currency'>
          <div class='form-group'>
            <p class='title'>Moeda Pretendida</p>
            <%= select_tag 'target_currency', options_for_select(currency_list, 'BRL'), class: 'form-control', id: 'target_currency'%>
          </div>
          <div class='form-group'>
            <input type='text' id='result' name='result' class='form-control' placeholder='Resultado' readonly>
          </div>
        </div>
        <div class="d-none">
          <button type='submit' class='btn btn-primary btn-exchange-btc col-md-12'>CONVERTER</button>
        </div>
      <% end %>
    </div>
  </div>
</div>